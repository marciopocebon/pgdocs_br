#: xml/ecpg.xml:308(title)
msgid "Running SQL Commands"
msgstr ""

#: xml/ecpg.xml:309(para)
msgid "Any SQL command can be run from within an embedded SQL application. Below are some examples of how to do that."
msgstr ""

#: xml/ecpg.xml:312(title)
msgid "Executing SQL Statements"
msgstr ""

#: xml/ecpg.xml:314(programlisting)
#, no-wrap
msgid "EXEC SQL CREATE TABLE foo (number integer,\n      ascii char(16)); EXEC SQL CREATE UNIQUE INDEX num1 ON\n      foo(number); EXEC SQL COMMIT;"
