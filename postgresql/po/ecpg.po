msgid "EXEC SQL BEGIN DECLARE SECTION; int id[5];\n      EXEC SQL END DECLARE SECTION; EXEC SQL FETCH 5 FROM mycursor\n      INTO SQL DESCRIPTOR mydesc; EXEC SQL GET DESCRIPTOR mydesc\n      VALUE 1 :id = DATA;"
