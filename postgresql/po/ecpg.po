#: xml/ecpg.xml:3780(programlisting)
#, no-wrap
msgid "sqlda_t *cur_sqlda; for (cur_sqlda =\n        sqlda1; cur_sqlda != NULL; cur_sqlda =\n        cur_sqlda-&gt;desc_next) { ... }"
msgstr ""

#: xml/ecpg.xml:3778(para)
msgid "Run a loop following the linked list to retrieve the rows. <placeholder-1/>"
